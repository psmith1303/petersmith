{{ partial "header.html" . }}
{{ $baseurl := .Site.BaseURL }}

<article>
	<h4>{{ .Title }}</h4>
	<p>{{ .Params.citation | markdownify | safeHTML }}</p>
  {{ if .Params.doi }}
	  <p class="small"><a href="http://dx.doi.org/{{.Params.doi}}">doi:{{.Params.doi}}</a></p>
	{{ end }}
	{{ if .Params.file }}
	  <p><a href="files/papers/{{.Params.file}}">Download PDF</a></p>
	  <p class="small">If you want to cite the paper, please check with me first. Thanks.</p>
		{{ end }}
		
  {{ .Content }}
  <hr>
  {{ if .PrevInSection }}
  <a href="{{.PrevInSection.Permalink}}"> &laquo;&nbsp;{{.PrevInSection.Title}}</a> | {{ end }}<a href="{{ $baseurl }}papers/">List of papers</a>{{ if .NextInSection }} | <a href="{{.NextInSection.Permalink}}">{{.NextInSection.Title}}&nbsp;&raquo; </a>
  {{ end }}


</article>

{{ partial "footer.html" . }}
